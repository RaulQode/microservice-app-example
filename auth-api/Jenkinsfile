// auth-api/Jenkinsfile
pipeline {
    agent {
        // Usa un agente de Jenkins que tenga Go instalado
        docker { image 'golang:1.19' }
    }

    environment {
        IMAGE_NAME = "auth-api"
        DOCKER_REGISTRY = "tu-usuario-docker"
    }

    stages {
        stage('Detectar Cambios') {
            when { changeset "auth-api/**" }
            steps {
                echo "Cambios detectados en el auth-api. Continuando..."
            }
        }

        stage('Descargar Dependencias y Probar') {
            steps {
                // Descarga las dependencias del módulo de Go
                sh 'go mod download'
                sh 'go test ./...'
            }
        }

        stage('Construir Binario') {
            steps {
                // Compila la aplicación de Go. CGO_ENABLED=0 es para compilación estática
                sh 'CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o main .'
            }
        }

        stage('Construir Imagen Docker') {
            steps {
                sh "docker build -t ${IMAGE_NAME}:${env.GIT_COMMIT.substring(0,7)} ."
                sh "docker tag ${IMAGE_NAME}:${env.GIT_COMMIT.substring(0,7)} ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest-${env.BRANCH_NAME}"
            }
        }

        stage('Publicar Imagen Docker') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh "echo ${DOCKER_PASS} | docker login -u ${DOCKER_USER} --password-stdin"
                    sh "docker push ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest-${env.BRANCH_NAME}"
                }
            }
        }
    }
    post {
        success {
            if (env.BRANCH_NAME == 'main') {
                echo "Disparando el pipeline de integración..."
                build job: 'integration-pipeline',
                      parameters: [
                          string(name: 'TRIGGERING_SERVICE', value: "${IMAGE_NAME}"),
                          string(name: 'IMAGE_TAG', value: "latest-main")
                      ]
            }
        }
    }
}