pipeline {
    agent any

    environment {
        IMAGE_NAME = "frontend-app"
        DOCKER_REGISTRY = "geoffrey0pv"
        SERVICE_DIR = "frontend"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "Procesando cambios en ${IMAGE_NAME}"
            }
        }

        stage('Install Dependencies & Build') {
            steps {
                dir("${SERVICE_DIR}") {
                    script {
                        docker.image('node:8.17.0-alpine').inside {
                            sh '''
                                npm install
                                npm run build
                            '''
                        }
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${SERVICE_DIR}") {
                    script {
                        def shortCommit = env.GIT_COMMIT.substring(0,7)
                        def imageTag = "latest-${env.BRANCH_NAME}"
                        
                        echo "Construyendo imagen: ${DOCKER_REGISTRY}/${IMAGE_NAME}:${imageTag}"
                        
                        def image = docker.build("${DOCKER_REGISTRY}/${IMAGE_NAME}:${shortCommit}")
                        image.tag(imageTag)
                        
                        env.FINAL_IMAGE_TAG = imageTag
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('', 'dockerhub-credentials') {
                        docker.image("${DOCKER_REGISTRY}/${IMAGE_NAME}:${env.GIT_COMMIT.substring(0,7)}").push()
                        docker.image("${DOCKER_REGISTRY}/${IMAGE_NAME}:${env.FINAL_IMAGE_TAG}").push()
                        
                        echo "Imagen publicada: ${DOCKER_REGISTRY}/${IMAGE_NAME}:${env.FINAL_IMAGE_TAG}"
                    }
                }
            }
        }
    }
        
    post {
        success {
            script {
                if (env.BRANCH_NAME == 'master') {
                    echo "Disparando el pipeline de integración..."
                    
                    try {
                        build job: 'microservices-integration/master',
                              parameters: [
                                  string(name: 'TRIGGERING_SERVICE', value: "${IMAGE_NAME}"),
                                  string(name: 'IMAGE_TAG', value: "${env.FINAL_IMAGE_TAG}")
                              ],
                              wait: false
                    } catch (Exception e) {
                        echo "No se pudo disparar el pipeline de integración: ${e.getMessage()}"
                    }
                }
            }
        }
        always {
            cleanWs()
        }
        failure {
            echo "Build falló para ${IMAGE_NAME}"
        }
    }
}